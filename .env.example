
# ==============================================
# FunList.ai Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your values
# For Google Cloud deployment, set these in Cloud Run

# ----------------------------------------------
# Core Flask Configuration
# ----------------------------------------------
# REQUIRED: Secret key for Flask sessions - Generate a strong random key
# Example: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here-minimum-32-characters

# Flask environment (production for Cloud Run)
FLASK_ENV=production

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
# REQUIRED: PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# For Cloud SQL: postgresql://user:password@/database?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_ID
DATABASE_URL=postgresql://user:password@host:port/database

# ----------------------------------------------
# Google Services
# ----------------------------------------------
# REQUIRED: Google Maps API key for location services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google OAuth Configuration (if using Google login)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# ----------------------------------------------
# AI Services (at least one required for Fun Assistant)
# ----------------------------------------------
# Anthropic Claude API (recommended)
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI GPT API
OPENAI_API_KEY=your-openai-api-key

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# ----------------------------------------------
# External Services
# ----------------------------------------------
# URL to Express API backend (if deployed separately)
EXPRESS_API_URL=https://your-central-api-url.run.app

# ----------------------------------------------
# Server Configuration
# ----------------------------------------------
# Port for the Flask application (Cloud Run uses 8080)
PORT=8080

# ----------------------------------------------
# Development Only (not needed in production)
# ----------------------------------------------
# REPLIT_DEV_DOMAIN=your-replit-domain
# REPL_SLUG=your-repl-slug
# REPL_OWNER=your-repl-owner

# ----------------------------------------------
# Google Cloud Specific (set in Cloud Run, not in .env)
# ----------------------------------------------
# These are automatically set by Cloud Run:
# PROJECT_ID - Your GCP project ID
# SERVICE_NAME - Cloud Run service name
# REVISION - Cloud Run revision
# REGION - Deployment region
