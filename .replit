modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "python main.py"]

[env]
PORT = "5006"  # Set the desired port *here*. This is what main.py will use.

[[ports]]
localPort = 5006 # ONLY keep the 5006 port configuration.
externalPort = 5006

[workflows]

[[workflows.workflow]]
name = "Run"
author = 36270944

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
